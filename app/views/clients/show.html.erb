<%- model_class = Client -%>
<div class="page-header">
  <h1>Cliente</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:seller) %>:</strong></dt>
  <dd><%= @client.is_assigned? ? @client.seller.name : t("dict.unassigned") %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @client.name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:document_id) %>:</strong></dt>
  <dd><%= @client.document_id %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:marital_status) %>:</strong></dt>
  <dd><%= t("activerecord.attributes.client.marital_statuses.#{@client.marital_status}") unless @client.marital_status.blank? %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @client.email %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @client.phone %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= t("activerecord.attributes.client.statuses.#{@client.status}") unless @client.status.blank? %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:agenda) %>:</strong></dt>
  <dd><%= format_date(@client.agenda) %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:expiration_date) %>:</strong></dt>
  <dd><%= format_date(@client.expiration_date) %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @client.state %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:afinity) %>:</strong></dt>
  <dd><%= @client.afinity %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @client.comment %>&nbsp;</dd>
  <% if @vehicle %>
    <hr/>
    <h3><%= t('titles.vehicle_data') %></h2>
    <dt><strong><%= Vehicle.human_attribute_name(:brand) %>:</strong></dt>
    <dd><%= @vehicle.brand %>&nbsp;</dd>
    <dt><strong><%= Vehicle.human_attribute_name(:model) %>:</strong></dt>
    <dd><%= @vehicle.model %>&nbsp;</dd>
    <dt><strong><%= Vehicle.human_attribute_name(:version) %>:</strong></dt>
    <dd><%= @vehicle.version %>&nbsp;</dd>
    <dt><strong><%= Vehicle.human_attribute_name(:year) %>:</strong></dt>
    <dd><%= @vehicle.year %>&nbsp;</dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('actions.back'),
              clients_path, :class => 'btn'  %>
  <%= link_to t('actions.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('actions.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
