<%- model_class = User -%>
<div class="page-header">
  <h1><%=t model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:kind_of_user) %>:</strong></dt>
  <%- kind_of_user = @user.kind_of_user ? I18n.t("activerecord.attributes.user.kinds_of_user.#{@user.kind_of_user}") : "" -%>
  <dd><%= kind_of_user %>&nbsp;</dd>
</dl>

<div class="form-actions">
  <%= link_to t('actions.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('actions.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('actions.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('actions.confirm') },
              :class => 'btn btn-danger' %>
</div>
